<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/end"
        app:duration="1000"
        app:autoTransition="animateToEnd"
        />

    <ConstraintSet
        android:alpha="0.0"
        android:id="@+id/start"
        android:layout_margin="@dimen/margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".DetailActivity"
        tools:showIn="@layout/activity_detail">

        <Constraint
            android:alpha="0.0"
            android:id="@+id/file_name_label_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/file_name_text"
            android:textSize="@dimen/default_text_size"
            android:text="File Name:"/>

        <Constraint
            android:alpha="0.0"
            android:id="@+id/file_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/file_name_label_text"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/default_text_size"
            tools:text="LoadApp - Current repository by Udacity"/>

        <Constraint
            android:alpha="0.0"
            android:id="@+id/download_state_label_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/file_name_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/download_state_text"
            android:textSize="@dimen/default_text_size"
            android:text="Status:"/>

        <Constraint
            android:alpha="0.0"
            android:id="@+id/download_state_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/file_name_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/download_state_label_text"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/default_text_size"
            tools:text="Fail"/>



    </ConstraintSet>

    <ConstraintSet
        android:alpha="1.0"
        android:id="@+id/end"
        android:layout_margin="@dimen/margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".DetailActivity"
        tools:showIn="@layout/activity_detail">

        <Constraint
            android:alpha="1.0"
            android:id="@+id/file_name_label_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/file_name_text"
            android:textSize="@dimen/default_text_size"
            android:text="File Name:"/>

        <Constraint
            android:alpha="1.0"
            android:id="@+id/file_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/file_name_label_text"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/default_text_size"
            tools:text="LoadApp - Current repository by Udacity"/>

        <Constraint
            android:alpha="1.0"
            android:id="@+id/download_state_label_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/file_name_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/download_state_text"
            android:textSize="@dimen/default_text_size"
            android:text="Status:"/>

        <Constraint
            android:alpha="1.0"
            android:id="@+id/download_state_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/file_name_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/download_state_label_text"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/default_text_size"
            tools:text="Fail"/>

    </ConstraintSet>
</MotionScene>
